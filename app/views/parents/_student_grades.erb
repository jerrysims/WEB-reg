<% registrations = @registrations.where(student: student) %>
<div class="row box">
  <div class="col-12">
    <h5>Student: <%= student.full_name %></h5>
    <div class="row">
      <div class="col-3">
        Course
      </div>
      <div class="col-9">
        <div class="row">
          <div class="col-2">
            <strong>Q1</strong>
          </div>
          <div class="col-2">
            <strong>Q2</strong>
          </div>
          <div class="col-2">
            <strong>S1</strong>
          </div>
          <div class="col-2">
            <strong>Q3</strong>
          </div>
          <div class="col-2">
            <strong>Q4</strong>
          </div>
          <div class="col-2">
            <strong>S2</strong>
          </div>
        </div>
      </div>
    </div>
    <% registrations.each do |r| %>
      <div class="row alternating-row">
        <div class="col-3">
          <td><%= r.section.name %></td>
        </div>
        <div class="col-9">
          <div class="row">
            <div class="col-2">
              <td><%= r.quarterly_scores.find_by(quarter: :q1)&.grade %></td>
            </div>
            <div class="col-2">
              <td><%= r.quarterly_scores.find_by(quarter: :q2)&.grade %></td>
            </div>
            <div class="col-2">
              <td class="average"><%= r.s1_average %></td>
            </div>
            <div class="col-2">
              <td><%= r.quarterly_scores.find_by(quarter: :q3)&.grade %></td>
            </div>
            <div class="col-2">
              <td><%= r.quarterly_scores.find_by(quarter: :q4)&.grade %></td>
            </div>
            <div class="col-2">
              <td class="average"><%= r.s2_average %></td>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>