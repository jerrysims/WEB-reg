<% registrations = student.registrations %>
<div class="row box">
  <div class="col-6">
    <h3>Student: <%= student.full_name %></h3>
    <table>
      <thead>
        <tr>
          <th>Course</th>
          <th>Q1</th>
          <th>Q2</th>
          <th>Q3</th>
          <th>Q4</th>
        </tr>
      </thead>
      <tbody>
        <% registrations.each do |r| %>
          <tr>
            <td><%= r.section.name %></td>
            <td><%= r.q1_grade %></td>
            <td><%= r.q2_grade %></td>
            <td><%= r.q3_grade %></td>
            <td><%= r.q4_grade %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>