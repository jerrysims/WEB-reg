<h2>Students</h2>
<div class="row">
  <div class="col-12 box shadow">
    <% if current_parent.students.empty? %>
      <div class="row">
        Click below to create your first student
      </div>
    <% else %>
      <div class="row">
        Click on a student to begin registration
      </div>
      <div class="container row">
        <ul>
          <% @students.each do |s| %>
            <li class="student-tile row">
              <div class="col-md-6">
                <%= link_to s.full_name, student_view_course_list_path(student_id: s.id), class: "col-xs-6" %>
              </div>
              <div class="col-md-6">
                <%= link_to "Medical Form", new_student_medical_forms_path(s.id), class: "col-xs-6" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="container new-student-btn row">
      <%= link_to "Add a new student",  new_student_path, class: "btn btn-primary col-3" %>
    </div>
  </div>
</div>
