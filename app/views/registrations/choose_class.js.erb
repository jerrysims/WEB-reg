$selectedCourse = $("#course-<%= @course.id %>")

<% if @registered %>
  $selectedCourse.addClass("registered");
<% else %>
  $selectedCourse.append("<br><span class='alert'><%= @error_content %></span>");
<% end %>

<% if @class_is_full %>
  if (window.confirm("Class is full. Would you like to be added to the wait list")) {
    $.ajax({
      url: "/registrations/add_to_wait_list?course_id=" + <%= @course.id %> + "&student_id=" + <%= @student.id %>,
      success: function(){
        window.alert("<%= "You have been added to the wait list for #{@course.name}" %>");
      }
    });
  }
<% end %>
