<div class="row tuition-message">
  <div class="col-md-11 col-xs-11">
    Please select your payment schedule:
  </div>
  <div class="row tuition-payment-plan-selection">
    <div class="col-md-offset-2 col-md-10">
      <%= form_for(current_parent, url: { action: "update_tuition_preference" }) do |f| %>
        <div class="row">
          <div class="col-md-12 col-xs-12">
            <% %w(Annual Semester Monthly).each do |plan| %>
              <% case plan %>
              <% when "Annual" %>
                <% total = "$#{@annual}/yr." %>
              <% when "Semester" %>
                <% total = "$#{@semester}/sem." %>
              <% when "Monthly" %>
                <% total = "$#{@monthly}/mo." %>
              <% end %>
            <div class="row">
              <%= f.radio_button :tuition_preference, plan %>
              <%= f.label :tuition_preference, "#{plan} #{total}" %>
            </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
  <div class="col-md-10 col-xs-11">
    How will you pay fees? (Note: Debit/Credit payment will incur 3% fee)
  </div>
  <div class="row tuition-payment-plan-selection">
    <div class="col-md-offset-2 col-md-10">
      <div class="row">
          <div class="col-md-12 col-xs-12">
            <% %w(Cash/Check ACH Debit/Credit).each do |pay_pref| %>
              <div class="row">
              <%= f.radio_button :payment_preference, pay_pref %>
              <%= f.label :payment_preference, pay_pref %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10">
        <%= f.submit "Update Payment", class: "col-md-2 col-xs-8 custom-button payment-button" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
