<div class="box current-total-box">
  <% if action_name == "finalize" %>
    <h5 class="current-total-box-title">Total for Family:</h5>
    <div class="row current-total-box-row">
      <div class="col-6 current-total-box-fee-label">
        <span class="current-total-box-fee-label">Tuition:</span> 
      </div>
      <div class="col-6">
        <span id="tuition-total"><%= @parent_tuition_total %></span><span> / Semester</span>
      </div>
    </div>
  <% else %>
    <h5 class="current-total-box-title">Total for <%= @student.full_name %>:</h5>
    <div class="col-6 current-total-box-fee-label">
      <span class="current-total-box-fee-label">Course Fees:</span> 
    </div>
    <div class="col-6">
      <span id="course-fees"><%= @formatted_course_fees %></span>
    </div>
    <div class="row current-total-box-row">
      <div class="col-6 current-total-box-fee-label">
        <span class="current-total-box-fee-label">Tuition:</span> 
      </div>
      <div class="col-6">
        <span id="tuition-total"><%= @formatted_student_tuition_total %></span><span> / Semester</span>
      </div>
    </div>
  <% end %>
  </div>
</div>
