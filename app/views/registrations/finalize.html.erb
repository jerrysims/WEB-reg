<%= render "stripe_return_header", page_title: "Finalize Registration" %>
<script src="https://js.stripe.com/v3/"></script>
<div class="row">
  <div class="box shadow col-md-12 col-xs-12 col-sm-12">
    <div class="col-md-12 col-sm-8">
      <h4>Registration & Admin Fees</h4>
      <% @enrolled_students.each do |s| %>
        <div class="row">
          <div class="col-md-offset-4 col-md-6 col-xs-10 col-sm-10">
            <%= s.full_name %> Registration Fee
          </div>
          <div class="invoice-amounts col-md-2 col-xs-2 col-sm-2">
            $<%= @registration_fee %>
          </div>
        </div>
      <% end %>
      <% if @discount %>
        <div class="row">
          <div class="col-md-offset-4 col-md-6 col-xs-10 col-sm-10">
            Family Discount (multiple enrollees)
          </div>
          <div class="invoice-amounts col-md-2 col-xs-2 col-sm-2">
            $<%= @discount %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="col-md-offset-4 col-md-6 col-xs-10 col-sm-10">
          Administrative Fee
        </div>
        <div class="invoice-amounts col-md-2 col-xs-2 col-sm-2">
          $<%= @administrative_fee %>
        </div>
      </div>
      <div class="row invoice-total">
        <div class="col-md-offset-4 col-md-6 col-xs-10 col-sm-10">
          <h5>Total Due</h5>
        </div>
        <div class="col-md-2 col-xs-2 col-sm-2">
          <h5>$<%= @invoice_total %></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-8">
          In order to reserve your <%= @current_parent.enrolled_students_count > 1 ? "students'" : "student's" %> spot, please pay the registration fees. The following link will take you to Stripe
          <div class="row justify-content-center"><button id="checkout-button" class="custom-button col-5 justify-content-center">Pay Registration & Admin Fee</button></div>
          <p><br>After completing Stripe payment, you will be returned to our site to complete registration.</p>
        </div>
      </div>
    </div>
  </div>
</div>
  <!-- End of Registration / Course Fees Section -->


<script type="text/javascript">
  // Create an instance of the Stripe object with your publishable API key
  var stripe = Stripe("<%= @api_key %>");
  var checkoutButton = document.getElementById('checkout-button');

  checkoutButton.addEventListener('click', function() {
    // Create a new Checkout Session using the server-side endpoint you
    // created in step 3.
    fetch('create_checkout_session', {
      method: 'POST',
    })
    .then(function(response) {
      return response.json();
    })
    .then(function(session) {
      return stripe.redirectToCheckout({ sessionId: session.id });
    })
    .then(function(result) {
      // If `redirectToCheckout` fails due to a browser or network
      // error, you should display the localized error message to your
      // customer using `error.message`.
      if (result.error) {
        alert(result.error.message);
      }
    })
    // .catch(function(error) {
    //   console.error('Error:', error);
    // });
  });
</script>
