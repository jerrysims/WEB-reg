<h2>Log in</h2>
<div class="row">
  <div class="col-12 box shadow">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row field login-text-input">
        <%= f.input :email, input_html: {autofocus: true, class: "col-6"} %>
        <%= f.input :password, input_html: { autocomplete: "off", class: "col-6"} %>
        <% if devise_mapping.rememberable? -%>
            <%= f.input :remember_me, as: :boolean%>
        <% end -%>
      </div>
      <div class="actions col-4 col-xs-12 ">
        <%= f.submit "Log in", class: "btn-primary col-12" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%= render "devise/shared/links" %>
  </div>
</div>
