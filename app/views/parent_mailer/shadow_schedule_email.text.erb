<% @parent.students.each do |s| %>
  Student: <%= s.full_name %>
  Grade: <%= s.grade %>
  <% unless s.shadow_spots.empty? %>
  Current shadow schedule:
    <% s.shadow_spots.each do |shadow_spot| %>
    Subject: <%= shadow_spot.subject.name %>
