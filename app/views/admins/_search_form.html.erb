<div class="box">
  <%= search_form_for @q, url: admin_open_seats_path, builder: SimpleForm::FormBuilder do |f| %>
    <div class="row"><%= f.input :course_id_eq, label: 'Course Name', collection: Course.all.order(:name), required: false %></div>
    <div class="row"><%= f.input :day_eq, label: 'Day', collection: ["Tuesday", "Thursday", "Tuesday/Thursday"], required: false %></div>
    <div class="row"><%= f.input :course_grades_cont, label: "Grade Level", collection: ["5", "6","7","8","9","10","11","12"], required: false %></div>

    <div class="row">
      <div class="text-center">
        <%= f.submit "Search", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
